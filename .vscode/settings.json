{
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.formatOnType": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "python.analysis.typeCheckingMode": "basic",
    "python.autoComplete.extraPaths": [
        "./.venv/lib/python3.11/site-packages",
        "/usr/lib/x86_64-linux-gnu/python3.11/site-packages"
    ],
    "python.analysis.extraPaths": [
        "./.venv/lib/python3.11/site-packages",
        "/usr/lib/x86_64-linux-gnu/python3.11/site-packages"
    ],
    "java.project.referencedLibraries": [
        "${workspaceFolder}/connector/lib/**/*.jar",
        "${workspaceFolder}/connector/lib/metashape-java-api.jar",
        "${workspaceFolder}/connector/lib/metashape-java-api-javadoc.jar",
        "${workspaceFolder}/connector/lib/metashape-java-api-sources.jar"
    ],
    "java.project.sourcePaths": [
        "${workspaceFolder}/connector/src"
    ],
    "java.project.outputPath": "${workspaceFolder}/connector/bin",
}